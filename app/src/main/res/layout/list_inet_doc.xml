<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="6">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxSend"
        android:layout_column="0"
        android:enabled="false"
        android:focusable="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvRecipientContactPerson"
        android:layout_row="0"
        android:ems="6"
        android:layout_column="1"
        android:layout_columnSpan="5"
        android:text="User User USer" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvRecipientContactPhone"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:ems="11"
        android:text="+380670000000"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvIntDocNumber"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:ems="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvEstimatedDeliveryDate"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:ems="6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvPayerType"
        android:layout_column="4"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:ems="6"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvRecipientAddressDescription"
        android:layout_column="0"
        android:layout_columnSpan="6" />
</GridLayout>